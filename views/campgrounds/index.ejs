<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
	<div class="container">
		
	  <h1>Welcome to Yelpcamp!</h1>
		<p>View our hand-picked campgrounds from all over the world</p>
	    
		<p> 
			<a style="height:auto" class="btn btn-primary btn-lg" href = "/campgrounds/new">Add New Campground</a>
	</p>
	</div>
	</header>
	
  
	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds!</h3>
		</div>
	</div> 
	
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;"> 
   <% campgrounds.forEach(function(campground){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail" id="image">
			<img src="<%= campground.image %>">
		<div class="caption">
			<h4><strong><%= campground.name %></strong> </h4>     
			</div>
			<p>
				<a style="height:auto" href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
			</p>
	</div>
		</div>
    <% }); %>
	</div>
</div>
	
<% include ../partials/footer %>